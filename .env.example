# Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://oncall_user:oncall_password@localhost:5432/oncall_agent
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=oncall_agent
DATABASE_USER=oncall_user
DATABASE_PASSWORD=oncall_password
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TTL=3600

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here
API_HOST=0.0.0.0
API_PORT=8000

# Monitoring Sources
ELASTICSEARCH_URLS=["http://localhost:9200"]
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
SPLUNK_HOST=localhost
SPLUNK_PORT=8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=changeme

# Airflow Integration
AIRFLOW_BASE_URL=http://localhost:8080
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin
AIRFLOW_API_VERSION=v1
AIRFLOW_TIMEOUT=30
AIRFLOW_VERIFY_SSL=false

# Airflow Connection Details for Action Execution
AIRFLOW_CONNECTION_ID=airflow_default
AIRFLOW_DAG_TIMEOUT=600

# Spark Integration
SPARK_HISTORY_SERVER_URL=http://localhost:18080
SPARK_MASTER_URL=spark://localhost:7077
SPARK_USERNAME=spark
SPARK_PASSWORD=spark_password
SPARK_APPLICATION_WEB_UI_PORT=4040

# Kubernetes Integration (for service restarts)
K8S_CONFIG_PATH=/home/user/.kube/config
K8S_NAMESPACE=default
K8S_CONTEXT=default

# Docker Integration (for container management)
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_API_VERSION=auto

# Action Engine Settings
MAX_CONCURRENT_ACTIONS=5
ACTION_TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=10

# Alert Configuration
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=alerts@yourcompany.com
ALERT_EMAIL_PASSWORD=your_email_password
ALERT_EMAIL_FROM=oncall-agent@yourcompany.com
ALERT_EMAIL_TO=["oncall@yourcompany.com"]

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#oncall-alerts

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Prometheus Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Log File Monitoring
LOG_PATHS=/var/log/app/*.log,/var/log/airflow/*.log,/var/log/spark/*.log
LOG_POLL_INTERVAL_SECONDS=5
LOG_BUFFER_SIZE=1000

# AI Decision Engine
CONFIDENCE_THRESHOLD=0.60
MAX_QUEUE_SIZE=1000
PROCESSING_TIMEOUT_SECONDS=300
AI_DECISION_LOOP_INTERVAL_SECONDS=2

# PagerDuty Integration
PAGERDUTY_API_KEY=your_pagerduty_api_key_here
PAGERDUTY_SERVICE_ID=your_pagerduty_service_id
PAGERDUTY_ENABLED=false

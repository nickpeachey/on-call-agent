# AI On-Call Agent Environment Configuration
# Mode: local-development

# Application Settings
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=local-dev-secret-key-for-development-testing-only-minimum-32-characters-long-enough
API_HOST=0.0.0.0
API_PORT=8001
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (PostgreSQL via Docker - localhost ports)
# Using localhost instead of container names for local development
DATABASE_URL=postgresql://oncall_user:oncall_password@localhost:5432/oncall_agent

# Redis Configuration (localhost port)
REDIS_URL=redis://localhost:6379/0

# AI Configuration
OPENAI_API_KEY=sk-test-key-not-real-for-local-development
OPENAI_MODEL=gpt-3.5-turbo

# Security
JWT_SECRET_KEY=local-dev-jwt-secret-key-for-development-minimum-32-characters-long-enough
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Monitoring Sources (localhost ports)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Airflow Configuration (for real API calls during testing)
AIRFLOW_BASE_URL=http://localhost:8080
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin

# Notification Configuration (test values)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
EMAIL_USER=test@example.com
EMAIL_PASSWORD=test_password
TEAMS_WEBHOOK_URL=https://example.webhook.office.com/test
ONCALL_EMAILS=oncall1@example.com,oncall2@example.com

# AI Configuration
CONFIDENCE_THRESHOLD=0.3
MAX_AUTOMATION_ACTIONS=5
ENABLE_RISK_ASSESSMENT=true

# Monitoring Configuration
MONITORING_INTERVAL=30

# Development Mode
TEST_MODE=true
QUIET_MODE=false
LOCAL_DEV=true
